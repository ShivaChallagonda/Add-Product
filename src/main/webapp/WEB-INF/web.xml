<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>SaveProductServlet</servlet-name>
  	<display-name>SaveProductServlet</display-name>
  	<description></description>
  	<servlet-class>com.servlet.SaveProductServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ListProductServlet</servlet-name>
  	<display-name>ListProductServlet</display-name>
  	<description></description>
  	<servlet-class>com.utility.ListProductServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ProductServlet</servlet-name>
  	<display-name>ProductServlet</display-name>
  	<description></description>
  	<servlet-class>com.servlet.ProductServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>SaveProductServlet</servlet-name>
  	<url-pattern>/SaveProductServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ListProductServlet</servlet-name>
  	<url-pattern>/ListProductServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ProductServlet</servlet-name>
  	<url-pattern>/ProductServlet</url-pattern>
  </servlet-mapping>
</web-app>
